<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Voting System</title>
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/927/927305.png"
          type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        $(function () { // will trigger when the document is ready
            $('.datepicker').datepicker(); //Initialise any date pickers
        });
    </script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .body-content {
            max-width: 70%;
            margin-top: 30px;
            background-color: rgba(236,239,241,1);
            border-radius: 10px;
        }
        ul.breadcrumb {
            padding: 10px 16px;
            list-style: none;
            background-color: #eee;
        }
        .navbar-dark .navbar-nav .nav-link {
            color:white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="navbar-brand">
            @Html.ActionLink("Online Voting System", "AdminHome", "Elections", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("View Elections", "ViewElections", "Elections", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Add Elections", "AddElections", "Elections", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("View Candidates", "AddCandidates", "Candidates", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Users", null, new { @class = "nav-link" })</li>

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
        

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
