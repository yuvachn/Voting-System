@model IEnumerable<LoginandRegisterMVC.Models.Candidate>

@{
    ViewBag.Title = "AddCandidates";
}

<h2>View Candidates</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ElectionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ElectionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CandidateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.ActionLink("VOTE", "Vote", new { id = item.CandidateId ,id2=item.ElectionId})</td>
            <td></td>
        </tr>
    }

    
</table>
